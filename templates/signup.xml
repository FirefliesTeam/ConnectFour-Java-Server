<fest:template xmlns:fest="http://fest.mail.ru" context_name="player">

    <div class="window">
        <a href="#" class="window__a_decoration-none" >
            <span class="window__span_green window__span_hover-blue"> Connect FOUR </span>
        </a>
        <h2 class="window__header_align-center_white">Sign up now!</h2>
        <form method="post" class="form window__form" action="/register">
            <p>
                <label class="form__label_border-green">Username </label>
                <input id="username" class="form__input" name="login" type="text" max="64" placeholder="Username"/>
                <div class="form__message_red form__username-invalid">Put down correct username. It must conatain from 2 to 15 symbols</div>
                <div class="form__message_red form__username-exists">This name already exists, choose another one</div>
            </p>
        
            
            <p>
                <label class="form__label_border-green">Email</label>
                <input id="email" class="form__input" name="email" type="e-mail" max="65" placeholder="Email"/>
                <div class="form__message_red form__email-invalid">Put down correct email. It must conatain from 5 to 15 symbols</div>
            </p>
            
            <p>
                <label class="form__label_border-green">Password </label>
                <input id="password1" class="form__input" name="password" type="password" max="20" placeholder="Password" /> 
                <div class="form__message_red form__password-invalid">Put down correct password. It must conatain from 2 to 20 symbols</div>
            </p>
            
            <p>
                <label class="form__label_border-green">Password </label>
                <input id="password2" class="form__input" name="password2" type="password" max="20" placeholder="Repeat your password"/> 
                <div class="form__message_red form__passwords-different">Passwords must be equal</div>
            </p>
            <p>
                <button class="form__btn_green_border-none js_sign_up" type="button">Sign_up!</button>
    		</p>
        </form>
		<a href="#" class="window__a_decoration-none">
    		<span class="window__span_orange window__span_hover-blue">Back</span>
    	</a>
    </div>
    
    <div class="signup_fixed">
        <div class="signup__welcome_color-white"> 
            <p class="signup__close_align-right">
		        <a href="#" class="js_btn_close">
                     close
            	</a>
            </p>
            <p>
                Congratulations,&nbsp <span class="welcome__name"></span>!
            </p>
            <p>
                You have been successfuly registered.
            </p>
            <p>
		        <a href="#login" class="js_log_in">
                    Log in here ->
            	</a>
            </p>
        </div>
    </div>
    
</fest:template>
