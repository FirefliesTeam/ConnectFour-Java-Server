<fest:template xmlns:fest="http://fest.mail.ru">

    <div class="window">
        <a href="#" class="window__a_decoration-none" >
            <span class="window__span_green window__span_hover-blue"> Connect FOUR </span>
        </a>
        <h2 class="window__header_align-center_white">Sign up now!</h2>
        <form method="post" class="form window__form" action="/register">
            <p>
                <label class="form__label_border-green">Username </label>
                <input id="username" class="form__input" name="login" type="text" placeholder="Username"/>
            </p>
            <p>
                <label class="form__label_border-green">Email</label>
                <input id="email" class="form__input" name="email" type="e-mail" placeholder="Email"/>
            </p>
            <p>
                <label class="form__label_border-green">Password </label>
                <input id="password1" class="form__input" name="password" type="password" placeholder="Password"/> 
            </p>
            <p>
                <label class="form__label_border-green">Password </label>
                <input id="password2" class="form__input" name="password2" type="password" placeholder="Repeat your password"/> 
            </p>
            <p>
                <button class="form__btn_green_border-none js_sign_up" type="sumbit">Sign_up!</button>
            </p>
        </form>

		<a href="#" class="window__a_decoration-none">
    		<span class="window__span_orange window__span_hover-blue">Back</span>
    	</a>
    </div>
</fest:template>
